{% extends "base.twig" %}

{% block head %}
<title>{{ site.name}} - Login</title>
{{ parent() }}
{% endblock %}

{% block bodyclass %}
	login-page bg-image bg-frontpage
{% endblock %}

{% block content %}

<!--page-login.twig page -->

<div class="page page-login">
	<section>
		<span class="section-title">Registrazione circolo</span>

		{% if errors.any() %}
		<div class="alert alert-danger">
			<ul>
				{% for error in errors.all() %}
					<li>{{ error }}</li>
				{% endfor %}
			</ul>
		</div>
		{% endif %}

		{% include 'components/sections/registration-club-form.twig' %}
	</section>
</div>
{% endblock %}
