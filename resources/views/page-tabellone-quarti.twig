            <div style="overflow: auto">
                <div class="card__inner flex">
                    <div style="justify-content: center; -webkit-justify-content: center;" class="flex">


                        <div class="tournament-container">
                            <div class="tournament-headers">
                                <h3>Quarti</h3>
                                <h3>Semi-Finale</h3>
                                <h3>Finale</h3>
                            </div>

                            <div class="tournament-headers">
                                {% for phase in phases %}
                                <h5>{{ phase.description }}</h5>
                                {% endfor %}
                            </div>

                            <div class="tournament-brackets">

                                {% for phase in phases %}
                                <ul class="bracket bracket-{{phase.name + 1}}">

                                    {% for index, match in phase.matches %}
                                    <li class="team-item{{phase.matches|length}}">

                                        {% include 'components/partials/card-match-tournament.twig' %}

                                    </li>
                                    {% endfor %}

                                </ul>
                                {% endfor %}

                                <ul class="bracket bracket-5">
                                    <!-- NO CARD-MATCH -->
                                </ul>
                            </div>
                        </div>

                    </div>
