{% extends "base-tabellone.twig" %}
{% import 'components/partials/tabs.twig' as tabs %}

{% block head %}
    <title>{{ site.name}} - </title>
    {{ parent() }}
    <link rel="stylesheet" href="/resources/assets/css/components/partials/forms.css" />
    <link rel="stylesheet" href="/resources/assets/css/jquery-fancybox.min.css" />
{% endblock %}

{% block bodyclass %}
    page-torneo bg-image bg-frontpage
{% endblock %}

{% block content %}

    <div>
        <input type="hidden" name="id_tournament" value="{{ tournament.id }}">
        <input type="hidden" name="_token" value="{{ csrf_token() }}">

        <div class="cta-container flex flex--between">
            <a href="javascript:history.go(-1);"  class="cta cta--yellow cta--rounded cta--back">Indietro</a>
        </div>

        <div class="section-title"><h4>{{ tournament.edition.edition_name }}</h4></div>
        <div class="section-title "><h2>{{ bracket.zone.name }} {{ bracket.category.name }} {{ bracket.categoryType.name }}</h2></div>

        <link href="/resources/assets/css/components/partials/card-match.css?v=1.0.4" rel="stylesheet">
