<!-- card-news--big.twig partial -->

<article class="card card-news--big">

	{% if loop.index <= 1 and cardnewsbig is not defined or loop.index is not defined and cardnewsbig is not defined %}

	<link rel="stylesheet" href="{{ asset('resources/assets') }}/css/components/partials/card-news--big.css?v={{version}}" />

	{% endif %}

	<div class="card__thumbnail card__thumbnail--big"> <!-- card__thumbnail--podcast, card__thumbnail--video to add icons-->
		<picture  data-link="/news/{{ queryItem.permalink }}">
			<img class="lazyload" data-srcset="{{ queryItem.srcImgCardBig }}, {{ queryItem.srcImgCardBigx2 }} 2x" alt="{{ queryItem.title }}"/>
		</picture>
		<noscript>
				<picture>
						<!--[if IE 9]><video style="display: none;"><![endif]-->
						<source srcset="{{ queryItem.srcImgCardBig }}" media="(max-width: 736px)"/>
						<!--[if IE 9]></video><![endif]-->
						<img src="{{ queryItem.srcImgCardBig }}" alt="{{ queryItem.title }}"/>
				</picture>
		</noscript>

	</div>
	<div class="card__content">
		<a href="/news/{{ queryItem.permalink }}">
			<div class="card__title">
				<h3>{{ queryItem.title }}</h3>
			</div>
			<time datetime="{{ queryItem.excerpt }}">{{ queryItem.excerpt|date('d F Y', "Europe/Rome") }}</time>
			<p class="abstract_news ">{{ queryItem.content|striptags|str_limit(100) }} </p>
		</a>
	</div>
